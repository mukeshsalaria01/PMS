
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles
    {
    <link rel="stylesheet" type="text/css" href="~/vendors/css/tables/datatable/datatables.min.css">
    <link href="~/lib/bootstrap-sweetalert/dist/sweetalert.css" rel="stylesheet" />
    <style type="text/css">
        .width-85 {
            width: 85px;
        }
    </style>
}
<!---------- breadcrum ----------->
<div class="content-header row">
    <div class="content-header-left col-md-6 col-12 mb-2 breadcrumb-new">
        <h3 class="content-header-title mb-0 d-inline-block"> <i class="la la-table"></i> Employees List</h3>
        <div class="row breadcrumbs-top d-inline-block">
            <div class="breadcrumb-wrapper col-12">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a asp-controller="Dashboard" asp-action="Index">Home</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a asp-controller="Employee" asp-action="Index">Employees</a>
                    </li>
                    <li class="breadcrumb-item active">
                        Employees List
                    </li>
                </ol>
            </div>
        </div>
    </div>
    <div class="content-header-right col-md-6 col-12">
        <div class="dropdown float-md-right">
            <button class="btn btn-danger dropdown-toggle round btn-glow px-2" id="dropdownBreadcrumbButton" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Actions</button>
            <div class="dropdown-menu" aria-labelledby="dropdownBreadcrumbButton">
                <a class="dropdown-item" href="#"><i class="la la-calendar-check-o"></i> Calender</a>
                <a class="dropdown-item" href="#"><i class="la la-cart-plus"></i> Cart</a>
                <a class="dropdown-item" href="#"><i class="la la-life-ring"></i> Support</a>
                <div class="dropdown-divider"></div><a class="dropdown-item" href="#"><i class="la la-cog"></i> Settings</a>
            </div>
        </div>
    </div>
</div>
<!---------- /breadcrum ----------->
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-head border-bottom-blue">
                <div class="card-header">
                    <h4 class="card-title"><i class="la la-user"></i> Employees</h4>
                    <a class="heading-elements-toggle"><i class="la la-ellipsis-h font-medium-3"></i></a>
                    <div class="heading-elements">
                        <input type="hidden" id="hdnRole" value="@User.IsInRole("Admin").ToString()" />
                        <button class="btn btn-primary btn-sm"><i class="ft-plus white"></i> Add New</button>
                    </div>
                </div>
            </div>
            <div class="collapse show">
                <div class="card-body">
                    <table id="tblEmployee" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th data-class="expand">Employee</th>
                                <th data-hide="tablet, phone">Employe #</th>
                                <th data-hide="tablet,phone">Grade</th>
                                <th data-hide="tablet,phone">Appraisal Period</th>
                                <th data-hide="tablet,phone">Department</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Id</th>
                                <th>Employee</th>
                                <th>Employee #</th>
                                <th>Grade</th>
                                <th>Appraisal Period</th>
                                <th>Department</th>
                                <th>Action</th>
                            </tr>
                        </tfoot>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts
    {
    <script src="~/lib/datatables/js/jquery.dataTables.js"></script>
    <script src="~/vendors/js/tables/datatable/datatables.min.js"></script>
    <script src="~/lib/datatables/js/datatables.responsive.js"></script>
    <script src="~/lib/bootstrap-sweetalert/dist/sweetalert.js"></script>
    <script src="~/viewscripts/employee.js" asp-append-version="true"></script>
}
